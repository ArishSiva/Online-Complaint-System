<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="10dp" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:overScrollMode="never">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/imageView8" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginTop="25dp" android:src="@drawable/admin"/>
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/textView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/admin" android:textAllCaps="true" android:textAlignment="center" android:letterSpacing="0.3" app:layout_constraintBottom_toBottomOf="@+id/imageView8"/>
        <GridLayout android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:rowCount="6" android:columnCount="1">
            <androidx.cardview.widget.CardView android:layout_gravity="fill" android:id="@+id/admin_complaint_card" android:layout_width="wrap_content" android:layout_height="150dp" android:layout_column="0" android:onClick="adminComplaintCard" android:layout_row="0" android:layout_rowWeight="1" android:layout_columnWeight="1" app:cardBackgroundColor="@color/d_white" app:cardCornerRadius="10dp">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                    <ImageView android:id="@+id/complaint_image" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_post_com" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
                    <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/compliant" android:layout_below="@+id/complaint_image" android:layout_centerHorizontal="true" android:textAllCaps="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView android:layout_gravity="fill" android:layout_width="wrap_content" android:layout_height="150dp" android:layout_marginTop="15dp" android:onClick="adminFeedbackCard" android:layout_row="1" android:layout_rowWeight="1" android:layout_columnWeight="1" app:cardBackgroundColor="@color/d_white" app:cardCornerRadius="10dp">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                    <ImageView android:id="@+id/admin_showFeedback" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_feedback" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
                    <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/post1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/feedback" android:layout_below="@+id/admin_showFeedback" android:layout_centerHorizontal="true" android:textAllCaps="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView android:layout_gravity="fill" android:layout_width="wrap_content" android:layout_height="150dp" android:layout_marginTop="15dp" android:onClick="adminHistoryCard" android:layout_row="2" android:layout_rowWeight="1" android:layout_columnWeight="1" app:cardBackgroundColor="@color/d_white" app:cardCornerRadius="10dp">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                    <ImageView android:id="@+id/historyImage" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_history" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
                    <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/post2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/history" android:layout_below="@+id/historyImage" android:layout_centerHorizontal="true" android:textAllCaps="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView android:layout_gravity="fill" android:layout_width="wrap_content" android:layout_height="150dp" android:layout_marginTop="15dp" android:onClick="handleAccountManaging" android:layout_row="2" android:layout_rowWeight="1" android:layout_columnWeight="1" app:cardBackgroundColor="@color/d_white" app:cardCornerRadius="10dp">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                    <ImageView android:id="@+id/manageImage" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_manage_accounts" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
                    <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/post4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/account_managing" android:layout_below="@+id/manageImage" android:layout_centerHorizontal="true" android:textAllCaps="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView android:layout_gravity="fill" android:layout_width="wrap_content" android:layout_height="150dp" android:layout_marginTop="15dp" android:layout_marginBottom="10dp" android:onClick="adminInformation" android:layout_row="2" android:layout_rowWeight="1" android:layout_columnWeight="1" app:cardBackgroundColor="@color/d_white" app:cardCornerRadius="10dp">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                    <ImageView android:id="@+id/informationImage" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_baseline_info" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
                    <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/post5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/information" android:layout_below="@+id/informationImage" android:layout_centerHorizontal="true" android:textAllCaps="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
    </LinearLayout>
</ScrollView>
