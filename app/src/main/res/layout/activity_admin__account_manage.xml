            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView android:layout_gravity="fill" android:layout_width="wrap_content" android:layout_height="150dp" android:layout_marginTop="25dp" android:onClick="removeSuperVisor" android:layout_row="1" android:layout_rowWeight="1" android:layout_columnWeight="1" app:cardBackgroundColor="@color/d_white" app:cardCornerRadius="50dp">
