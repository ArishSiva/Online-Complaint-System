            </TableRow>
            <TableRow android:padding="3dp">
                <TextView android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="2dp" android:layout_marginBottom="3dp" android:text="Name" android:layout_weight="1"/>
