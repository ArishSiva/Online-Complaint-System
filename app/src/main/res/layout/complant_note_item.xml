                <TextView android:textSize="16sp" android:id="@+id/note_Location" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="3dp" android:text="Location" android:layout_weight="5"/>
            </TableRow>
            <TableRow android:padding="3dp">
                <TextView android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="2dp" android:layout_marginBottom="3dp" android:text="Compliant" android:layout_weight="1"/>
                <TextView android:textSize="16sp" android:id="@+id/note_compliant" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="3dp" android:text="Compliant" android:layout_weight="5"/>
            </TableRow>
            <TableRow android:padding="3dp">
                <TextView android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="2dp" android:layout_marginBottom="3dp" android:text="Street" android:layout_weight="1"/>
                <TextView android:textSize="16sp" android:id="@+id/note_street" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="3dp" android:text="Street" android:layout_weight="5"/>
            </TableRow>
            <TableRow android:padding="3dp">
                <TextView android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="2dp" android:layout_marginBottom="3dp" android:text="Priority" android:layout_weight="1"/>
                <TextView android:textSize="16sp" android:id="@+id/note_priority" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="3dp" android:text="priority" android:layout_weight="5"/>
            </TableRow>
            <TableRow android:padding="3dp">
                <TextView android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="2dp" android:layout_marginBottom="3dp" android:text="Status" android:layout_weight="1"/>
                <TextView android:textSize="16sp" android:textColor="@color/green" android:id="@+id/note_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="3dp" android:text="Status" android:layout_weight="5"/>
